---
import type { List, Props } from "../types";

const { node, astroClass } = Astro.props as Props<List>;
const { listItem } = node;
const attrs = { class: astroClass };
const listItemIs = (it: string) => it === listItem;
---

{listItemIs("number") ? (
  <ol {...attrs}>
    <slot />
  </ol>
) : (
  <ul {...attrs}>
    <slot />
  </ul>
)}
