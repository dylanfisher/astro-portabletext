---
import { ListItem } from "astro-portabletext/components";
import ListItemStyleStar from "../ListItemStyleStar.astro";

export type Props = Parameters<typeof ListItem>[0];

const props = Astro.props;
const listItemIs = (listItem: string) => listItem === props.node.listItem;

const Cmp = listItemIs("star") ? ListItemStyleStar : ListItem;
---

<Cmp {...props}><slot /></Cmp>
