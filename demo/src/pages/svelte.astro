---
import { PortableText } from "astro-portabletext";
import Layout from "../layouts/Default.astro";
import { AstroSvelteCounter as Counter } from "../components/counter";
import portabletext from "../data/portabletext.json";
---

<Layout heading="Svelte Client Example">
  <div data-portabletext>
    <PortableText
      value={portabletext}
      components={{
        type: {
          counter: Counter,
        },
      }}
    />
  </div>
</Layout>

<style>
  @import "../assets/styles.css";
</style>
